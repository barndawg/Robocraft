{
    "manifest_version": 1.3,
    "type": "WebApp",
    "permissions": ["GameInfo"],
    "meta": {
        "name": "Robocraft",
        "version": "0.3.3",
        "minimum-overwolf-version":"0.77.10",
        "author": "barndawg",
        "icon": "assets/images/Robocraft.png",
        "icon_gray": "assets/images/RobocraftGrey.png",
        "description": "Placeholder"
    },
    "data": {
        "start_window": "MainWindow",
        "windows": {
    	    "MainWindow": {
                "file": "index.html",
                "transparent": true,
                "resizable": false,
                "size": {"width": 100, "height": 100},
                "min_size": {"width": 100, "height": 100},
                "max_size": {"width": 100, "height": 100}
            },
            "ExitWindow": {
                "file": "exit.html",
                "transparent": true,
                "resizable": false,
                "size": {"width": 270, "height": 115},
            },
            "TipsWindow": {
                "file": "ingame/tips/tips.html",
                "transparent": false,
                "resizable": false,
                "size": {"width": 500, "height": 100},
            }
        }
    }
}
