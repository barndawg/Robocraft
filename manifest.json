{
    "manifest_version": 1.4,
    "type": "WebApp",
    "permissions": ["GameInfo"],
    "meta": {
        "name": "Robocraft Tips App",
        "version": "1.0",
        "minimum-overwolf-version":"0.77.10",
        "author": "barndawg",
        "icon": "assets/images/Robocraft.png",
        "icon_gray": "assets/images/RobocraftGrey.png",
        "description": "A tips and tricks app for RoboCraft that gives you tips relevant to what you are doing in-game."
    },
    "data": {
        "start_window": "MainWindow",
        "windows": {
    	    "MainWindow": {
                "file": "HTML/index.html",
                "transparent": true,
                "resizable": false,
                "size": {"width": 100, "height": 100},
                "min_size": {"width": 100, "height": 100},
                "max_size": {"width": 100, "height": 100}
            },
            "TipsWindow": {
                "file": "HTML/tips.html",
                "transparent": true,
                "resizable": false,
                "size": {"width": 500, "height": 100},
            }
        }
    }
}
